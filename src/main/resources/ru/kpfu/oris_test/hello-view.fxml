<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ru.kpfu.oris_test.ChatBotController"
      spacing="10" alignment="CENTER" style="-fx-padding: 20;">
    <TextArea fx:id="chatArea" editable="false" wrapText="true" prefHeight="400" prefWidth="600" />

    <TextField fx:id="inputField" promptText="Введите команду" />

    <Button text="Отправить" onAction="#handleCommand" />
</VBox>
